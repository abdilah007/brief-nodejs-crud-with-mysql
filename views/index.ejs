<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="css/main.css">
</head>
<body>

<div class="container-fluid">
  <a href="/add" class="btn btn-lg btn-primary float-right">Add Author</a><br/><br/>
  


  <h1><%= title %></h1>
           <br>
      <div class="row mb-5">
      
       <% authors.forEach(function(author){ %>
               <div class="col-3" >
                <div class="card">
                    <div class="card-header align-center"><h1 align="center"><%= author.name %></h1></div>
                   <div class="card-body">
      
      <h3 class="card-text align-center" style="color: white;"><%= author.description %></h3>
          
           <a href="edit/<%= author.id %>" class="btn btn-lg   btn-primary">Edit</a>
          <a href="delete/<%= author.id %>" class="btn btn-lg  btn-danger">Delete</a>
    </div>
    </div>
    </div>

 
 <% }); %>
  </div>
  </div>
</body>
</html>